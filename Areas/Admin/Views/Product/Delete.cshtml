@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-12">
        <h4 class="text-center">Удалить товар?</h4>
        <form id="request" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Артикул</th>
                        <th>Название</th>
                        <th>Цвет</th>
                        <th>Размер</th>
                        <th>Цена</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Item</td>
                        <td>@Model.Name</td>
                        <td>@Model.Color</td>
                        <td>@Model.Size</td>
                        <td>
                            <span class="table-main">@Model.Cost ₽</span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mb-4">
                <a style="margin-right: 20px"
                   class="btn-secondary btn"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Index"
                   role="button">Отменить
                </a>
                <a class="btn-danger btn"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="DeleteProduct"
                   asp-route-productId="@Model.Id"
                   role="button">Удалить
                </a>
            </div>
        </form>
    </div>
</div>
