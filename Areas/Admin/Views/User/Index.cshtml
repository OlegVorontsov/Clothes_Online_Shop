@model List<UserAccount>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @await Html.PartialAsync("AdminLeft")
    <div class="col-10">
        <h4>Пользователи</h4>
        @if (Model == null || Model.Count == 0)
        {
            <h3>Пользователей нет</h3>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Логин</th>
                        <th>Телефон</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>
                                <a class="btn-danger btn"
                                   asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="Remove"
                                   asp-route-userName="@item.Name"
                                   role="button">
                                    Удалить
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
