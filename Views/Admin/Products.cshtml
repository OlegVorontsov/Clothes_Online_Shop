@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @await Html.PartialAsync("AdminLeft")
    <div class="col-10">
        <h4>Продукты</h4>
        @if (Model == null || Model.Count == 0)
        {
            <h3>Товаров нет</h3>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>АРТИКУЛ</th>
                        <th>НАЗВАНИЕ</th>
                        <th>ЦВЕТ</th>
                        <th>РАЗМЕР</th>
                        <th>ЦЕНА</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Item</td>
                        <td>@item.Name</td>
                        <td>@item.Color</td>
                        <td>@item.Size</td>
                        <td>
                            <strong>@item.Cost ₽</strong>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
