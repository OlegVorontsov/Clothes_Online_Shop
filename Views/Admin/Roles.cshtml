@model List<Role>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @await Html.PartialAsync("AdminLeft")
    <div class="col-10">
        <h4>Роли</h4>
        @if (Model == null || Model.Count == 0)
        {
            <h3>Ролей нет</h3>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn-danger btn" href="/admin/removeRole?roleName=@item.Name" role="button">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a class="btn btn-secondary" href="/admin/addRole" role="button">Добавить роль</a>

    </div>
</div>
