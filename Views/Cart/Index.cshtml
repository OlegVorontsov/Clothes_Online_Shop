@model Cart

@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>ФОТО</th>
                        <th>ЦВЕТ</th>
                        <th>РАЗМЕР</th>
                        <th>ЦЕНА</th>
                        <th>КОЛИЧЕСТВО</th>
                        <th>СУММА</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <img style="max-width: 68px" src="@item.Product.ImgPath" />
                            </td>
                            <td>@item.Product.Color</td>
                            <td>@item.Product.Size</td>
                            <td>
                                <strong>@item.Product.Cost ₽</strong>
                            </td>
                            <td>@item.Amount</td>
                            <td>
                                <strong>@item.Cost ₽</strong>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <p>Количество @Model.ItemsCount</p>
                <p>Стоимость @Model.TotalCost ₽</p>
                <p>Скидка @ShopUser.UserSale ₽</p>
                <p>Доставка @ShopUser.UserDelivery ₽</p>
                <h3>ИТОГО @Model.FullCost ₽</h3>
            </div>
        </div>
    </div>
}

<a href="/product/catalog">В каталог</a>