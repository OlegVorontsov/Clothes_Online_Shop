@model Register

@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-4 mb-4">
        <h4 class="text-center">Регистрация</h4>
        <form id="request" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="flex justify-content-between">
                <label asp-for="Email">Введите ваш e-mail</label>
                <span class="text-danger" asp-validation-for="Email"></span>
                <input class="input-reset" style="min-width:100%" asp-for="Email" placeholder="e-mail*" />
            </div>
            <div class="flex justify-content-between">
                <label asp-for="Phone">Введите ваш телефон</label>
                <span class="text-danger" asp-validation-for="Phone"></span>
                <input class="input-reset" style="min-width:100%" asp-for="Phone" placeholder="телефон*" />
            </div>
            <div class="flex justify-content-between">
                <label asp-for="Password">Введите ваш пароль</label>
                <span class="text-danger" asp-validation-for="Password"></span>
                <input class="input-reset" style="min-width:100%" type="password" asp-for="Password" placeholder="пароль*" />
            </div>
            <div class="flex justify-content-between">
                <label asp-for="ConfirmPassword">Подтвердите ваш пароль</label>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                <input class="input-reset" style="min-width:100%" type="password" asp-for="ConfirmPassword" placeholder="подтвердите пароль*" />
            </div>
            <button style="min-width:100%"
                    class="btn btn-secondary"
                    type="submit"
                    asp-controller="Account"
                    asp-action="Register">ЗАРЕГИСТРИРОВАТЬСЯ
            </button>
        </form>
    </div>
</div>
