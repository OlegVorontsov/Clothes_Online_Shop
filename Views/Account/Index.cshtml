@model UserViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @await Html.PartialAsync("UserLeft", Model.Name)
    <div class="col-4">
        <h4>Личные данные</h4>
        <form id="request" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" name="Name" value="@Model.Name" />
            <div class="flex justify-content-between">
                <label asp-for="Email">E-mail</label>
                <span asp-validation-for="Email"></span>
                <input class="input-reset" style="min-width:100%" asp-for="Email" placeholder="e-mail*" />
            </div>
            <div class="flex justify-content-between">
                <label asp-for="Phone">Телефон</label>
                <span asp-validation-for="Phone"></span>
                <input class="input-reset" style="min-width:100%" asp-for="Phone" placeholder="phone*" />
            </div>
            <button class="btn btn-secondary mb-4"
                    type="submit"
                    asp-area=""
                    asp-controller="Account"
                    asp-action="Edit">
                Сохранить изменения
            </button>
        </form>
    </div>
</div>
