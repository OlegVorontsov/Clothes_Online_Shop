<header class="header">
    <div class="header__top">
        <p class="header__top-text">Lorem ipsum is placeholder text commonly used -20%</p>
    </div>
    <div class="header__center">
        <div class="header__left">
            <a href="#" class="header__logo">
                <img src="/img/logo.svg" alt="logo" class="header__logo-img">
            </a>
            <a href="#" class="header__location">
                <img src="/img/location.svg" alt="logo">
            </a>
        </div>
        <div class="header__buttons">
            <button class="btn btn-danger header__btn-sale">Sale</button>
            <button class="btn-reset header__btn">Женщинам</button>
            <button class="btn-reset header__btn">Мужчинам</button>
            <button class="btn-reset header__btn">Детям</button>
        </div>
        <div class="header__right">
            <a class="link-reset header__right-btn" asp-area="">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path class="svg-path" d="M10.8748 18.75C15.2241 18.75 18.7498 15.2242 18.7498 10.875C18.7498 6.52576 15.2241 3 10.8748 3C6.52557 3 2.99982 6.52576 2.99982 10.875C2.99982 15.2242 6.52557 18.75 10.8748 18.75Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path class="svg-path" d="M16.443 16.4438L20.9993 21.0001" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="link-reset header__right-btn" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="/Home/Index">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path class="svg-path" d="M12 15C15.3137 15 18 12.3137 18 9C18 5.68629 15.3137 3 12 3C8.68629 3 6 5.68629 6 9C6 12.3137 8.68629 15 12 15Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path class="svg-path" d="M2.90521 20.2491C3.8273 18.6531 5.15316 17.3278 6.7496 16.4064C8.34605 15.485 10.1568 15 12.0001 15C13.8434 15 15.6541 15.4851 17.2506 16.4065C18.847 17.3279 20.1728 18.6533 21.0949 20.2493" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
            }
            <a class="link-reset header__right-btn" asp-area="" asp-controller="Favorite" asp-action="Index">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path class="svg-path" d="M12.5197 19.7848L19.5544 12.3432C21.2829 10.5148 21.5379 7.50664 19.9022 5.58506C19.4925 5.10234 18.9941 4.713 18.4374 4.44077C17.8807 4.16855 17.2775 4.01917 16.6644 4.00173C16.0514 3.98429 15.4414 4.09916 14.8717 4.33934C14.302 4.57952 13.7845 4.93997 13.3508 5.39869L12.0286 6.79738L10.887 5.58975C9.15855 3.76128 6.31491 3.49152 4.49839 5.22187C4.04207 5.6553 3.67401 6.18253 3.41667 6.7714C3.15934 7.36027 3.01812 7.99843 3.00163 8.64694C2.98515 9.29546 3.09374 9.94072 3.32079 10.5434C3.54783 11.146 3.88857 11.6934 4.32222 12.1522L11.5375 19.7848C11.6678 19.9226 11.8444 20 12.0286 20C12.2128 20 12.3895 19.9226 12.5197 19.7848V19.7848Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </a>
            <a class="link-reset header__right-btn header__cart" asp-area="" asp-controller="Cart" asp-action="Index">
                <small class="header__cart-counter">@await Component.InvokeAsync("Cart")</small>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path class="svg-path" d="M20.25 6.75H3.75C3.33579 6.75 3 7.08579 3 7.5V19.5C3 19.9142 3.33579 20.25 3.75 20.25H20.25C20.6642 20.25 21 19.9142 21 19.5V7.5C21 7.08579 20.6642 6.75 20.25 6.75Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path class="svg-path" d="M8.25 9.75V6.75C8.25 5.75544 8.64509 4.80161 9.34835 4.09835C10.0516 3.39509 11.0054 3 12 3C12.9946 3 13.9484 3.39509 14.6517 4.09835C15.3549 4.80161 15.75 5.75544 15.75 6.75V9.75" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </a>
        </div>
    </div>
    <div class="header__bottom">
        <ul class="list-reset header__bottom-list">
            <li class="nav-item">
                <a class="link-reset" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
            </li>
            <li class="nav-item">
                <a class="link-reset" href="#">Новинки</a>
            </li>
            <li class="nav-item">
                <a class="link-reset" href="#">Одежда</a>
            </li>
            <li class="nav-item">
                <a class="link-reset" href="#">Обувь</a>
            </li>
            <li class="nav-item">
                <a class="link-reset" href="#">Аксессуары</a>
            </li>
            <li class="nav-item">
                <a class="link-reset" href="#">Любимые бренды</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
            <li class="nav-item dropdown">
                <a class="link-reset dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item link-reset mb-2"
                       asp-area=""
                       asp-controller="Account"
                       asp-action="Index">
                        Личный кабинет
                    </a>
                    <a class="dropdown-item link-reset"
                       asp-area=""
                       asp-controller="Account"
                       asp-action="Logout">
                        Выйти
                    </a>
                </div>
            </li>
            }
            @if (User.IsInRole(ShopUser.AdminRoleName))
            {
                <li class="nav-item">
                    <a class="link-reset text-red"
                       asp-area="Admin"
                       asp-controller="Order"
                       asp-action="Index">Адинистратор
                    </a>
                </li>
            }
        </ul>
    </div>
</header>