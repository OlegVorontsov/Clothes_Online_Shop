@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="product">
    <div class="product__content">
        <div class="flex mb-4">
            <a class="product__page-start product__page-link pr-1" asp-area="" asp-controller="Home" asp-action="Index">Главная /</a>
            <a class="product__page-start product__page-link pr-1" asp-area="" asp-controller="Product" asp-action="Catalog">Каталог /</a>
            <span class="product__page-product">@Model.Name</span>
        </div>
        <div class="product__content-flex">
            <div class="product-left">
                <div id="productThumbnail" class="splide productThumbnail" aria-label="">
                    <div class="splide__arrows">
                        <button class="splide__arrow splide__arrow--prev product__arrow">
                            <svg width="18" height="10" viewBox="0 0 18 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.90918 9L8.90918 1L16.9092 9" stroke="#8C9196" stroke-linecap="round" />
                            </svg>
                        </button>
                        <button class="splide__arrow splide__arrow--next product__arrow">
                            <svg width="18" height="10" viewBox="0 0 18 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.90918 9L8.90918 1L16.9092 9" stroke="#8C9196" stroke-linecap="round" />
                            </svg>
                        </button>
                    </div>
                    <div class="splide__track splide__track-left">
                        <ul class="splide__list">
                            @foreach (var item in Model.ImgList)
                            {
                                <li class="splide__slide product__slide-item">
                                    <div class="thumbnail-card">
                                        <img src="@item.Path" alt="">
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div id="productMain" class="splide" aria-label="">
                    <div class="splide__track">
                        <ul class="splide__list">
                            @foreach (var item in Model.ImgList)
                            {
                                <li class="splide__slide product__slide-item">
                                    <div class="card-main">
                                        <img src="@item.Path" alt="">
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="product-right">
                <h2 class="product__title mb-4">@Model.Name</h2>
                <div class="product-flex mb-4">
                    <span class="product__page-start pr-2">Артикул</span>
                    <span class="product__page-product">@Model.Item</span>
                </div>
                <div class="product-flex mb-4">
                    <span class="product__page-product pr-2">цена</span>
                    <span class="product__price">@Model.Cost ₽</span>
                </div>
                <a class="btn btn-secondary hero-btn mb-4"
                   asp-area=""
                   asp-controller="Cart"
                   asp-action="Add"
                   asp-route-productId="@Model.Id"
                   role="button">
                    В корзину
                </a>
                <div class="accordion" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h3 class="mb-0">
                                <button class="btn btn-block text-left collapsed accordion-btn" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Подробнее
                                </button>
                            </h3>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-3">
                                        <span class="accordion__text-main">Цвет</span>
                                    </div>
                                    <div class="col-6">
                                        <p class="accordion__text">@Model.Color</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-3">
                                        <span class="accordion__text-main">Уход и стирка</span>
                                    </div>
                                    <div class="col-6">
                                        <p class="accordion__text">@Model.Care</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-3">
                                        <span class="accordion__text-main">Состав</span>
                                    </div>
                                    <div class="col-6">
                                        <p class="accordion__text">@Model.Fabric</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <span class="accordion__text-main">Страна бренда</span>
                                    </div>
                                    <div class="col-6">
                                        <p class="accordion__text">@Model.Country</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h3 class="mb-0">
                                <button class="btn btn-block text-left collapsed accordion-btn" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Описание
                                </button>
                            </h3>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                                <p class="accordion__text">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingThree">
                            <h3 class="mb-0">
                                <button class="btn btn-block text-left collapsed accordion-btn" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Таблица размеров
                                </button>
                            </h3>
                        </div>
                        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                            <div class="card-body">
                                <p class="accordion__text">Таблица размеров</p>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingFour">
                            <h3 class="mb-0">
                                <button class="btn btn-block text-left collapsed accordion-btn" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    Условия доставки
                                </button>
                            </h3>
                        </div>
                        <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-9">
                                        <p class="accordion__text">
                                            Бесплатная доставка при заказе от 3 000 руб.
                                            Вы можете выбрать подходящий для вас способ доставки товара:
                                        </p>
                                    </div>
                                </div>
                                <div class="delivery-item delivery-icon-1 mb-3">
                                    <div class="row">
                                        <div class="col-4">
                                            <p class="accordion__text">Курьерская доставка. Срок – от 1 дня</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="delivery-item delivery-icon-2 mb-3">
                                    <div class="row">
                                        <div class="col-4">
                                            <p class="accordion__text">Пункты выдачи заказов и постаматы. Срок – от 1 дня</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="delivery-item delivery-icon-3">
                                    <div class="row">
                                        <div class="col-4">
                                            <p class="accordion__text">Самовывозом из магазина. Срок – от 1 дня</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
